CREATE TABLE evaluation (
  id TEXT NOT NULL PRIMARY KEY,
  name TEXT NOT NULL,
  date TEXT NOT NULL,
  max_score INTEGER NOT NULL DEFAULT 20,
  type TEXT NOT NULL,
  term TEXT,
  course_id TEXT NOT NULL,
  FOREIGN KEY (course_id) REFERENCES course(id) ON DELETE CASCADE
);

insert:
INSERT INTO evaluation (id, name, date, type, course_id, max_score)
VALUES (?, ?, ?, ?, ?, 20);

findByCourse:
SELECT * FROM evaluation WHERE course_id = ?;